# Voxpipe configuration (example)
# Copy to: ~/.config/voxpipe/voxpipe.env

# Paths
WHISPER_REPO="$HOME/whisper.cpp"
WHISPER_BIN="$WHISPER_REPO/build/bin/whisper-cli"
MODEL_NAME="base.en-q5_1"
MODEL="$WHISPER_REPO/models/ggml-${MODEL_NAME}.bin"

# Bluetooth device identifiers (from: pactl list short cards/sources/sinks)
BT_CARD="bluez_card.CC_98_8B_F3_16_31"
BT_SRC="bluez_input.CC:98:8B:F3:16:31"
BT_SINK_PREFIX="bluez_output.CC:98:8B:F3:16:31"

# Profiles
HFP_PROFILE_PRIMARY="headset-head-unit"
HFP_PROFILE_FALLBACK="headset-head-unit-cvsd"
A2DP_PROFILES=(
  "a2dp-sink"
  "a2dp-sink-aptx"
  "a2dp-sink-aac"
  "a2dp-sink-sbc_xq"
  "a2dp-sink-sbc"
)

# Performance
THREADS=8
OPENBLAS_NUM_THREADS=1
OMP_NUM_THREADS=8

# Record-until-silence knobs
CHUNK_SECS=0.6
MIN_SECS=1.2
SILENT_CHUNKS_TO_STOP=3
SILENCE_DBFS=-45
MAX_SECS=12
